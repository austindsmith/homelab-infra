# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars is in .gitignore and will not be committed

# Proxmox API Configuration
pm_api_url = "https://your-proxmox-server:8006/api2/json"
pm_api_token_id = "your-token-id"
pm_api_token_secret = "your-token-secret"

# VM Configuration
node_name = "proxmox"  # Your Proxmox node name
vm_template = "ubuntu-2004-cloudinit-template"  # Your VM template name
vm_password = "your-secure-vm-password"

# Resource Configuration (optional - defaults provided)
vm_memory = 8192      # 8GB RAM per VM
vm_cores = 4          # 4 CPU cores per VM
vm_count = 3          # Number of VMs to create
vm_disk_size = "100G" # Disk size per VM
vm_disk_storage = "local-lvm"  # Storage pool name

# SSH Configuration (optional - default provided)
ssh_pubkey_path = "/home/austin/.ssh/id_ed25519.pub"
